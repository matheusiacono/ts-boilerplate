{
  "extends": "./tsconfig",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "noEmitOnError": true,
    "preserveValueImports": false,
    "sourceMap": true,
    "outDir": "./build/tsc",
    "removeComments": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
